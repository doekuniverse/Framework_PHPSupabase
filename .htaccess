# Habilitar el motor de reescritura
RewriteEngine On

# Redirigir las solicitudes con hash a la p치gina de callback
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^$ /auth/callback.php [L]

# Permitir que PHP maneje los archivos .php
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Configuraci칩n de seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    # Prevenir MIME-sniffing
    Header always set X-Content-Type-Options "nosniff"
    # Habilitar protecci칩n XSS en navegadores modernos
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevenir acceso a archivos sensibles
<FilesMatch "^\.env|composer\.json|composer\.lock|package\.json|package-lock\.json|README\.md">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Redirigir errores a p치ginas personalizadas
ErrorDocument 403 /errors/403.php
ErrorDocument 404 /errors/404.php
